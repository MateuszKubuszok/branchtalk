<configuration>

    <!-- Logs internal actions for programmer -->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} | %-5level %-40logger{38} | %msg%n</pattern>
        </encoder>
    </appender>

    <!--<root level="error">-->
    <root level="off">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- suppress Hikari logs -->
    <logger name="com.zaxxer.hikari.HikariConfig" level="off"/>
    <logger name="com.zaxxer.hikari.pool.PoolBase" level="off"/>
    <!-- suppress kafka logs -->
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="off"/>
    <logger name="org.apache.kafka.common.metrics.Metrics" level="off"/>
</configuration>
